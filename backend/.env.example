# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Database
# Format: mongodb://[username]:[password]@[host]:[port]/[database]?authSource=admin
MONGO_URI=mongodb://admin:password@localhost:27017/devashish?authSource=admin

# Elasticsearch
# URL for Elasticsearch instance
ELASTICSEARCH_URL=http://localhost:9200

# Redis Configuration
# Option 1: Use connection URL (for local Redis or simple setups)
# REDIS_URL=redis://localhost:6379

# Option 2: Use individual credentials (for Redis Labs/Cloud Redis)
REDIS_HOST=redis-18785.c9.us-east-1-4.ec2.cloud.redislabs.com
REDIS_PORT=18785
REDIS_USERNAME=default
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE

# JWT Authentication
# Generate strong random strings for production (use: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Razorpay Payment Gateway
# Get test keys from: https://dashboard.razorpay.com/app/keys
# Test Key ID format: rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_ID=rzp_test_12345678901234567890
# Test Key Secret format: xxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=abcdefghijklmnopqrstuvwxyz123456

# Twilio SMS Service (Optional - for OTP)
# Get credentials from: https://console.twilio.com/
# Account SID format: ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID_HERE
# Auth Token format: xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN_HERE
# Phone number format: +1234567890
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email Service (Optional)
# Get API key from: https://app.sendgrid.com/settings/api_keys
# API Key format: SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE
# From email address
SENDGRID_FROM_EMAIL=noreply@aktrendflare.com

# Ekart Courier Service (Mock API for development)
# Replace with real credentials in production
EKART_API_KEY=mock_api_key_for_development_12345
EKART_API_URL=http://localhost:5000/api/mock/ekart

# CORS Configuration
# Frontend URL for CORS
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
# Maximum file size in bytes (5MB = 5242880)
MAX_FILE_SIZE=5242880
# Directory for uploaded files
UPLOAD_DIR=./uploads

# Rate Limiting
# Time window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100
